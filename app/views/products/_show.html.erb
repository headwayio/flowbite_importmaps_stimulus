<div class="relative p-4 w-md max-w-xl max-h-full">
  <!-- Modal content -->
  <div class="relative p-4 bg-white rounded-lg shadow dark:bg-gray-800 sm:p-5">
    <!-- Modal header -->
    <div class="flex justify-between mb-4 rounded-t sm:mb-5">
      <div class="text-lg text-gray-900 md:text-xl dark:text-white">
        <h3 class="font-semibold "><%= product.name %></h3>
        <p class="font-bold"><%= number_to_currency(product.price, unit: "$") %></p>
      </div>
      <div>
        <%= flowbite_modal_trigger_x('readProductModal') %>
      </div>
    </div>
    <dl>
      <dt class="mb-2 font-semibold leading-none text-gray-900 dark:text-white">Details</dt>
      <dd class="mb-4 font-light text-gray-500 sm:mb-5 dark:text-gray-400"><%= product.description %></dd>
      <dt class="mb-2 font-semibold leading-none text-gray-900 dark:text-white">Category</dt>
      <dd class="mb-4 font-light text-gray-500 sm:mb-5 dark:text-gray-400"><%= product.category %></dd>
    </dl>
    <div class="flex justify-between items-center">
      <div class="flex items-center space-x-3 sm:space-x-4">
        <%= resource_modal_trigger "updateProductModal", form_products_path(id: product), close_parent: true, class: "text-white inline-flex items-center bg-primary-700 hover:bg-primary-800 focus:ring-4 focus:outline-none focus:ring-primary-300 font-medium rounded-lg text-sm px-5 py-2.5 text-center dark:bg-primary-600 dark:hover:bg-primary-700 dark:focus:ring-primary-800" do %>
          <%= icon(:edit) %> Edit
        <% end %>
      </div>
      <%= resource_modal_trigger "deleteModal", delete_confirm_product_path(product), close_parent: true, class: "inline-flex items-center text-white bg-red-600 hover:bg-red-700 focus:ring-4 focus:outline-none focus:ring-red-300 font-medium rounded-lg text-sm px-5 py-2.5 text-center dark:bg-red-500 dark:hover:bg-red-600 dark:focus:ring-red-900" do %>
        <%= icon(:delete) %> Delete
      <% end %>
    </div>
  </div>
</div>
